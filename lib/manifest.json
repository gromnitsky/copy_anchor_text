{
    "manifest_version": 2,
    "name": "copy_anchor_text",
    "version": "0.0.2",
    "description": "Adds an item to the context menu for copying a link name",
    "icons": {
	"128": "icons/128.png"
    },
    "permissions": [
	"contextMenus",
	"clipboardWrite"
    ],
    "background": {
	"page": "background.html"
    },
    "content_scripts": [{
	"matches": ["<all_urls>"],
	"js": ["content_script.js"]
    }]
}
